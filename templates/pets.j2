<html>

<head>
	<title>Paw-sitively Purrfect Partners</title>
	{# <link href="app.css" rel="stylesheet" type="text/css" /> #}
	<script language="JavaScript">
	function showform(dowhat) {
		/*
		 * four DIVS: browse, insert, update, delete
		 * this function sets one visible the others not
		 */
		if(dowhat == 'insert') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'update') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'block';
			document.getElementById('delete').style.display = 'none';
		} else if(dowhat == 'delete') {
			document.getElementById('browse').style.display = 'none';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'block';
		} else if(dowhat == 'all') {
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'block';
			document.getElementById('edit').style.display = 'block';
			document.getElementById('delete').style.display = 'block';
		} else { //by default display browse
			document.getElementById('browse').style.display = 'block';
			document.getElementById('insert').style.display = 'none';
			document.getElementById('edit').style.display = 'none';
			document.getElementById('delete').style.display = 'none';
		}
	}

	function newApplication() {
		showform('insert');
	}

	function updatePet(petName) {
		// Set the pet name in the update form
		document.getElementById('edit_pet_name').value = petName;
		showform('update');
	}

	function deletePet(petName) {
		// Set the pet name in the delete form
		document.getElementById('delete_pet_name').value = petName;
		showform('delete');
	}

	function browsePets() {
		showform('browse');
	}


	function showAll() {
		showform('all');
	}
	</script>
	 <style>
    h1 {text-align: center;}
    section {text-align: center;}
    .navbar {
            display: flex;
            position: sticky;
            align-items: center;
            justify-content: space-between;
            top: 0px;
            background-blend-mode: darken;
            background-size: cover;
            padding: 10px 20px;
        }

        .nav-list {
            display: flex;
            list-style: none;
        }

        .nav-list li {
            margin-right: 20px;
        }

        .nav-list li:last-child {
            margin-right: 0;
        }

        .nav-list li a {
            text-decoration: none;
            font-size: 18px;
            transition: color 0.3s ease-in-out;
        }

        .nav-list li a:hover {
            color: #ffd700;
            /* Change the color on hover */
        }

        .rightNav {
            text-align: right;
        }

        #search {
            padding: 8px;
            font-size: 16px;
            border: 2px solid #fff;
            border-radius: 5px;
        }

        .btn {
            background-color: #ffd700;
            color: #000;
            border: none;
            padding: 8px 12px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        .btn:hover {
            background-color: #000;
            /* Change the background color on hover */
            color: #ffd700;
        }
  </style>


</head>


<body onload="browsePets()">
  <nav class="navbar">
    <ul class="nav-list">
        <li><a href="browse">Browse Pets</a></li>
        <li><a href="search">Search Pets</a></li>
        <li><a href="donate">Donate</a></li>
        <li><a href="contact">Contact Us</a></li>
        <li><a href="/">Login</a></li>
        <li><a href="register">Register</a></li>
    </ul>
</nav>

	<div id="browse">

		<table border="1" cellpadding="5">
            {% if data %}
				<thead>
				    {# <tr> #}
                        <th scope="col">Pet Name</th>
                        <th scope="col">Availability</th>
                        <th scope="col">Type</th>
                        <th scope="col">Breed</th>
                        <th scope="col">Description</th>
                        <th scope="col">Disposition</th>
                        <th scope="col">News Items</th>
                        <th scope="col">Images</th>
                    {# </tr> #}
                 </thead>

								<tbody> 
                    {% for document in data %}
                        
					    <tr>
                            <th scope="row">{{ document.pet_name }}</th>
                            <td>{{ document.availability }}</td>
                            <td>{{ document.type }}</td>
                            <td>{{ document.breed }}</td>
                            <td>{{ document.description }}</td>
                            <td>{{ document.disposition }}</td>
                            <td>{{ document.news_items }}</td>
                            <td>{{ document.images }}</td>   
                            <td>
                                <button class="btn" onclick="updatePet('{{ document.pet_name }}')">Edit</button>
                            </td>
                            <td>
                                <button class="btn" onclick="deletePet('{{ document.pet_name }}')">Delete</button>
                            </td>

					     </tr>  
                </tbody> 
                        {% endfor %} 
                {% endif %} 
        </table>   
	<p>&nbsp;</p>
			<p><a href="#" onClick="newPet()">Add A New Pet</a> </p>

	</div>	
    <!-- browse -->

	<div id="insert">
		<!-- form to INSERT new data into Colleges-->
		<form id="insertPet" action="/pets" method="post">
			<legend><strong>Add A Pet</strong></legend>
            <p></p>

			<fieldset>
                <!-- placeholder shows ghost text, required forces an input, pattern forces input adherence -->
				<label for="pet_name">Pet Name:</label>
				<input type="text" class="form-control" id="pet_name" name="pet_name" placeholder="Required" required>

				<label for="availability">Location:</label>
				<input type="text" class="form-control" id="availability" name="availability" placeholder="">

                <label for="type">Type</label>
				<input type="date" class="form-control" id="type" name="type">

                <label for="breed">Breed</label>
				<input type="text" class="form-control" id="breed" name="breed" placeholder="">

				<label for="description">Description</label>
				<input type="text" class="form-control" id="description" name="description" placeholder=""> 
	 
	 			<label for="disposition">Disposition</label>
				<input type="number" class="form-control" id="disposition" name="disposition" placeholder="">
			
                <label for="news_items">News Items</label>
				<input type="number" class="form-control" id="news_items" name="news_items" placeholder="">

                <label for="images">Images</label>
				<input type="number" class="form-control" id="images" name="images" placeholder="">
			</fieldset>

            <!-- Create 'Add Application' and 'Cancel' buttons -->
			<input type="submit" value="Add" name="insertPet" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browsePets()"> 
        </form>
	</div><!--insert-->

	<div id="edit" style="display:none;">
		<!-- form to UPDATE pet data -->
		<form id="updatePet" action="/update_pet" method="post">
			<legend><strong>Update Pet</strong></legend>
			<fieldset>
				<input type="hidden" id="edit_pet_name" name="pet_name">
				
				<label for="edit_availability">Location:</label>
				<input type="text" class="form-control" id="edit_availability" name="availability" placeholder="Current location">

				<label for="edit_type">Type:</label>
				<input type="text" class="form-control" id="edit_type" name="type" placeholder="Pet type">

				<label for="edit_breed">Breed:</label>
				<input type="text" class="form-control" id="edit_breed" name="breed" placeholder="Pet breed">

				<label for="edit_description">Description:</label>
				<input type="text" class="form-control" id="edit_description" name="description" placeholder="Pet description">

				<label for="edit_disposition">Disposition:</label>
				<input type="text" class="form-control" id="edit_disposition" name="disposition" placeholder="Pet disposition">

				<label for="edit_news_items">News Items:</label>
				<input type="text" class="form-control" id="edit_news_items" name="news_items" placeholder="News items">

				<label for="edit_images">Images:</label>
				<input type="text" class="form-control" id="edit_images" name="images" placeholder="Image URLs">
			</fieldset>
			<input type="submit" value="Update Pet" name="updatePet" class="btn btn-primary" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browsePets()">
		</form>
	</div><!--edit-->

	<div id="delete" style="display:none;">
		<!-- form to DELETE pet data -->
		<form id="deletePet" action="/delete_pet" method="post">
			<legend><strong>Delete Pet</strong></legend>
			<fieldset>
				<input type="hidden" id="delete_pet_name" name="pet_name">
				<p>Are you sure you want to delete this pet?</p>
			</fieldset>
			<input type="submit" value="Delete Pet" name="deletePet" class="btn btn-danger" style="margin:.5rem;">
			<input class="btn" type="button" value="Cancel" onClick="browsePets()">
		</form>
	</div><!--delete-->

</body>
</html>